<root>
	<!--数据库表所需自定义类型在此定义-->
	<Rank_Member>
		<arg type="int64">role_id</arg>
		<arg type="string">role_name</arg>
		<arg type="int32">value</arg>
	</Rank_Member>

	<Hero_Detail>
		<arg type="int32">hero_id</arg>
		<arg type="int32">level</arg>
		<arg type="int32">exp</arg>
		<arg type="int32">star</arg>
		<arg type="int32">quality</arg>
		<arg type="int32">energy</arg>
		<vector type="int32">skill_info</vector>
		<vector type="Item_Info">equipe_info</vector>
		<vector type="Property_Detail">property_info</vector>
	</Hero_Detail>

	<Item_Info>
		<arg type="int32">item_id</arg>
		<arg type="int32">amount</arg>
		<arg type="int32">level</arg>
		<arg type="int32">exp</arg>
	</Item_Info>

	<Property_Detail>
		<arg type="int32">type</arg>
		<arg type="int32">value</arg>
	</Property_Detail>
	
	<Mail_Detail>
		<arg type="bool">pickup</arg>
		<arg type="int32">mail_id</arg>
		<arg type="int32">send_time</arg>
		<arg type="int32">sender_type</arg>
		<arg type="int64">sender_id</arg>
		<arg type="string">sender_name</arg>
		<arg type="string">mail_title</arg>
		<arg type="string">mail_content</arg>
		<arg type="int32">copper</arg>
		<arg type="int32">gold</arg>
		<vector type="Item_Info">item_info</vector>
	</Mail_Detail>

	<Shop_Detail>
		<arg type="int32">shop_type</arg>
		<arg type="int32">refresh_count</arg>
		<vector type="Product_Info">products</vector>
	</Shop_Detail>

	<Product_Info>
		<arg type="int32">product_id</arg>
		<arg type="int32">item_id</arg>
		<arg type="int32">price</arg>
		<arg type="int32">count</arg>
	</Product_Info>

	<Guild_Member_Detail>
		<arg type="int64">role_id</arg>
		<arg type="string">role_name</arg>
		<arg type="int32">level</arg>
		<arg type="int32">career</arg>
	</Guild_Member_Detail>


	<!--数据库表的储存结构-->
	<Role_Info>
		<fixed type="Role_Info">role_info</fixed>
		<fixed type="Hero_Info">hero_info</fixed>
		<fixed type="Bag_Info">bag_info</fixed>
		<fixed type="Mail_Info">mail_info</fixed>
		<fixed type="Shop_Info">shop_info</fixed>
	</Role_Info>

	<Hero_Info>
		<dbname>mmo.hero</dbname>
		<index>role_id</index>
		<cmdid>1</cmdid>
		<arg type="int64">role_id</arg>
		<vector type="Hero_Detail">hero_list</vector>
	</Hero_Info>

	<Bag_Info>
		<dbname>mmo.bag</dbname>
		<index>role_id</index>
		<cmdid>2</cmdid>
		<arg type="int64">role_id</arg>
		<arg type="int32">copper</arg>
		<arg type="int32">gold</arg>
		<vector type="Item_Info">item_list</vector>
	</Bag_Info>
	
	<Mail_Info>
		<dbname>mmo.mail</dbname>
		<index>role_id</index>
		<cmdid>3</cmdid>
		<arg type="int64">role_id</arg>
		<arg type="int32">total_count</arg>
		<vector type="Mail_Detail">mail_list</vector>
	</Mail_Info>
	
	<Shop_Info>
		<dbname>mmo.shop</dbname>
		<index>role_id</index>
		<cmdid>4</cmdid>
		<arg type="int64">role_id</arg>
		<vector type="Shop_Detail">shop_list</vector>
	</Shop_Info>
	
	<Rank_Info>
		<dbname>mmo.rank</dbname>
		<index>rank_type</index>
		<cmdid>150105</cmdid>
		<arg type="int64">rank_type</arg>
		<vector type="Rank_Member">member_list</vector>
	</Rank_Info>

	<Guild_Info>
		<dbname>mmo.guild</dbname>
		<index>guild_id</index>
		<cmdid>150103</cmdid>
		<arg type="int64">guild_id</arg>
		<arg type="bool">change</arg>
		<arg type="string">guild_name</arg>
		<arg type="int64">chief_id</arg>
		<vector type="Guild_Member_Detail">applicant_list</vector>
		<vector type="Guild_Member_Detail">member_list</vector>
	</Guild_Info>

	<Offline_Info>
		<dbname>mmo.guild</dbname>
		<index>role_id</index>
		<cmdid>150104</cmdid>
		<arg type="int64">role_id</arg>
		<arg type="int64">guild_id</arg>
		<arg type="string">guild_name</arg>
		<arg type="int16">flag</arg>
	</Offline_Info>
</root>
